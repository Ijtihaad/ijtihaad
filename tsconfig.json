{
  "compilerOptions": {
    "esModuleInterop": true,
    "noStrictGenericChecks": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@server": ["apps/server/src"],
      "@server/*": ["apps/server/src/*"],
      "@web": ["apps/web/src"],
      "@web/*": ["apps/web/src/*"],
      "@mobile": ["apps/mobile/src"],
      "@mobile/*": ["apps/mobile/src/*"],
      "@common": ["libs/common/src"],
      "@common/*": ["libs/common/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
